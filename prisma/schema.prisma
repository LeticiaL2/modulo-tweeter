
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id               Int       @id @default(autoincrement())
  email            String    @unique @db.Text()
  usuario          String    @unique @db.Text()
  senha            String    @db.Text()
  nome             String?   @db.Text()
  ativo            Boolean   @default(true)
  data_criacao     DateTime  @default(now())
  data_atualizacao DateTime  @default(now())
  data_ativacao    DateTime  @default(now())

  tweets           Tweet[]   @relation("usuario")
}

model Tweet {
  id            Int      @id @default(autoincrement())
  texto         String   @db.VarChar(280) 
  usuarioId     Int
  likes         Int     @default(0)
  comentarios   Int     @default(0)
  retweets      Int     @default(0)
  data_criacao  DateTime @default(now())

  usuario       Usuario  @relation("usuario", fields: [usuarioId], references: [id])
  }