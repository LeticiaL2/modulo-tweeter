
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  tweets           Tweet[]   @relation("usuarioTweets")
  likes             Likes[] @relation("usuarioLikes")

 
  id               Int       @id @default(autoincrement())
  email            String    @unique @db.Text()
  usuario          String    @unique @db.Text()
  senha            String    @db.Text()
  nome             String?   @db.Text()
  ativo            Boolean   @default(true)
  data_criacao     DateTime  @default(now())
  data_atualizacao DateTime  @default(now())
  data_ativacao    DateTime  @default(now())
}

model Tweet {
  usuario      Usuario  @relation("usuarioTweets", fields: [usuarioId], references: [id])
  likes        Likes[]  @relation("tweetLikes")
  comentarios  Comentarios[]   @relation("comentarioPai")
  retweets     Retweet[]   @relation("retweetPai")
  retweetPai     Retweet[]   @relation("retweetTweets")
  comentarioPai   Comentarios[]  @relation("tweetComentarios")

  id            Int      @id @default(autoincrement())
  texto         String?   @db.VarChar(280) 
  usuarioId     Int      @db.Integer
  data_criacao  DateTime @default(now())
  liked         Boolean  @default(false)
}

model Likes {
  usuario Usuario @relation("usuarioLikes", fields: [usuarioId], references: [id])
  tweet Tweet @relation("tweetLikes", fields: [tweetId], references: [id])
  id Int @id @default(autoincrement())
  tweetId Int 
  usuarioId Int  
}

model Comentarios {

   tweet       Tweet   @relation("tweetComentarios", fields: [tweetId], references: [id])
  tweetPai    Tweet?  @relation("comentarioPai", fields: [tweetPaiId], references: [id])


  id Int @id @default(autoincrement())
  tweetPaiId Int?
  tweetId Int
}

model Retweet {
  tweet            Tweet        @relation("retweetPai", fields: [tweetPaiId], references: [id])
  tweetPai         Tweet        @relation("retweetTweets", fields: [tweetId], references: [id])

  id Int @id @default(autoincrement())
  tweetPaiId Int
  tweetId Int
}  



